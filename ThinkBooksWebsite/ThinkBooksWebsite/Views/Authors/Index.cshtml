@model IEnumerable<ThinkBooksWebsite.Models.Author>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <table class="table">
        <tr>
            <th>AuthorID</th>

            <th>
                <button type="submit" name="sortOrder" id="sortOrderFirstName" value="@ViewBag.FirstNameSortParam">First Name</button>
                @*@Html.DisplayNameFor(model => model.FirstName)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.AuthorID}) |
                    @Html.ActionLink("Details", "Details", new {id = item.AuthorID}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.AuthorID})
                </td>
            </tr>
        }

    </table>
</form>